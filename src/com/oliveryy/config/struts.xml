<!DOCTYPE struts PUBLIC
		"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
		"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>		

	<!-- 修改Struts2业务控制器Action默认访问扩展名*.action为*.do -->
	<constant name="struts.action.extension" value="do" />
	<!-- 指定Web应用程序的默认编码集常量 -->
	<constant name="struts.i18n.encoding" value="utf-8" />	
	<package name="default" extends="struts-default">
	  <!-- 开始配置action,千万要注意啦! -->
	  <action name="loginAction"  class="loginAction"></action>  
	  <action name="registerAction"  class="registerAction"></action>
	  <action name="imyselfAction"  class="imyselfAction"></action>
	  <action name="idiscussionAction"  class="idiscussionAction"></action>
	  <action name="imemberAction"  class="imemberAction"></action>
	  <action name="iprojectAction"  class="iprojectAction"></action>
	  <action name="iReportAction"  class="iReportAction"></action>
	  <action name="taskAction"  class="taskAction"></action>
	  <action name="uploadAction"  class="uploadAction"></action>
	  <action name="downloadAction"  class="downloadAction"></action>
	<action name="discussionAction"  class="discussionAction"></action>
	 </package>
</struts>